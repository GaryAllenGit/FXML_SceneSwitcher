<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane hgap="10.0" prefHeight="180.0" prefWidth="300.0" vgap="10.0" xmlns="http://javafx.com/javafx/8.0.181" xmlns:fx="http://javafx.com/fxml/1" fx:controller="complexDemo.InputStageController">
   <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" maxWidth="146.0" minWidth="10.0" prefWidth="107.0" />
      <ColumnConstraints hgrow="SOMETIMES" maxWidth="162.0" minWidth="5.0" prefWidth="162.0" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
   </rowConstraints>
   <children>
      <Label text="ID:" />
      <Label text="Surname:" GridPane.rowIndex="1" />
      <Label text="First Name:" GridPane.rowIndex="2" />
      <Label text="Department:" GridPane.rowIndex="3" />
      <TextField fx:id="idTF" GridPane.columnIndex="1" />
      <TextField fx:id="surnameTF" GridPane.columnIndex="1" GridPane.rowIndex="1" />
      <TextField fx:id="firstnameTF" GridPane.columnIndex="1" GridPane.rowIndex="2" />
      <TextField fx:id="departmentTF" GridPane.columnIndex="1" GridPane.rowIndex="3" />
      <Button fx:id="inputStageDoneButton" mnemonicParsing="false" onAction="#inputStageDoneButtonClicked" text="Done" GridPane.rowIndex="4" />
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</GridPane>
